file_extension "g2mat";

namespace g2.gfx;

struct Vec3 {
    x: float;
    y: float;
    z: float;
}

table MaterialDef {
    name: string;
    albedoTexture: string;
    albedoFactor: Vec3;
    metallicRoughnessTexture: string;
    metallicFactor: float;
    roughnessFactor: float;
    normalTexture: string;
    occlusionTexture: string;
    emissiveTexture: string;
    emissiveFactor: Vec3;
}

root_type MaterialDef;